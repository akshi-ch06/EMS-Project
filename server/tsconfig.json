{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": ["src/**/*", "types/**/*"]
}
